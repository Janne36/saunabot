# options: https://clang.llvm.org/docs/ClangFormatStyleOptions.html
BasedOnStyle: LLVM
Language: Cpp
IndentWidth: 4
ColumnLimit: 100
UseTab: Never
#IndentAccessModifiers: false
#AccessModifierOffset: -2
BreakBeforeBraces: Custom
BraceWrapping:
    AfterFunction: true
    AfterClass: true
    AfterStruct: true
    AfterControlStatement: Always
    BeforeElse: true
    BeforeCatch: true
